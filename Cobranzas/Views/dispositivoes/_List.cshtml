@model List<Cobranzas.Data.dispositivo>
<table class="table table-bordered table-hover dataTable" id="tbdispo">
    <thead>
        <tr>
            <th>
                Modelo
            </th>
            <th>
                Emei
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.modelo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.imei)
                    </td>
                    <td>

                        <button type="button" data-id="@item.dispositivoID" onclick="details(@item.dispositivoID);" class="btn btn-xs btn-default"><samp class="glyphicon glyphicon-eye-open" /> &nbsp;</button>
                        <button type="button" data-id="@item.dispositivoID" onclick="edit(@item.dispositivoID);" class="btn btn-xs btn-warning"><samp class="glyphicon glyphicon-pencil" />&nbsp;</button>
                        <button type="button" data-id="@item.dispositivoID" onclick="delet(@item.dispositivoID);" class="btn btn-xs btn-danger"><samp class="glyphicon glyphicon-erase" />&nbsp;</button>

                    </td>
                </tr>
            }
        }

    </tbody>

</table>
<script>
    $(function () {
        $('#tbdispo').DataTable({
            responsive: true
        })
