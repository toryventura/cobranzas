@model List<Cobranzas.Data.Seguimiento>
<table class="table table-bordered table-hover dataTable" id="ag-grid">
    <thead>
        <tr>
            <th>
                Fecha
            </th>
            <th>
                Estado
            </th>
            <th>
                Modelo
            </th>
            <th>
                Nombre Cobrador
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {

            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.estado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.dispositivo.modelo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario.UsuarioNombre)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.seguimientoID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.seguimientoID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.seguimientoID })
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
<script>
    $(function () {
