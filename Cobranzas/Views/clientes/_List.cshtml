@using Cobranzas.Data
@model List<cliente>
<table class="table table-bordered table-hover dataTable" id="tbCliente">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Apellido
            </th>
            <th>
                Telefono
            </th>
            <th>
                CI
            </th>
            <th>
                Domicilio
            </th>
            <th>
                Otros
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ci)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.domicilio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.otros)
                    </td>
                    <td>

                        <button type="button" data-id="@item.clienteID" onclick="details(@item.clienteID);" class="btn btn-xs btn-default"><samp class="glyphicon glyphicon-eye-open" /> &nbsp;</button>
                        <button type="button" data-id="@item.clienteID" onclick="edit(@item.clienteID);" class="btn btn-xs btn-warning"><samp class="glyphicon glyphicon-pencil" />&nbsp;</button>
                        <button type="button" data-id="@item.clienteID" onclick="delet(@item.clienteID);" class="btn btn-xs btn-danger"><samp class="glyphicon glyphicon-erase" />&nbsp;</button>

                    </td>
                </tr>
            }
        }

    </tbody>
</table>
<script>
