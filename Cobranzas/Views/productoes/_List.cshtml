@model List<Cobranzas.Data.producto>
<table class="table table-bordered table-hover dataTable" id="ag-grid">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Precio
            </th>
            <th>
                Descripcion
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.descripcion)
                    </td>
                    <td>
                        <button type="button" data-id="@item.productoID" onclick="details(@item.productoID);" class="btn btn-xs btn-default"><samp class="glyphicon glyphicon-eye-open" /> &nbsp;</button>
                        <button type="button" data-id="@item.productoID" onclick="edit(@item.productoID);" class="btn btn-xs btn-warning"><samp class="glyphicon glyphicon-pencil" />&nbsp;</button>
                        <button type="button" data-id="@item.productoID" onclick="delet(@item.productoID);" class="btn btn-xs btn-danger"><samp class="glyphicon glyphicon-erase" />&nbsp;</button>

                    </td>
                </tr>
            }
        }

    </tbody>
</table>
<script>
